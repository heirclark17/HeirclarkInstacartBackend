{
  "toolMappings": {
    "fitbit": {
      "activity": {
        "tool": "get_activity_summary",
        "description": "Get daily activity summary (steps, calories, distance, floors)",
        "inputSchema": {
          "date": "string (YYYY-MM-DD)"
        },
        "outputFields": ["steps", "calories", "distance", "floors", "activeMinutes"]
      },
      "sleep": {
        "tool": "get_sleep_log",
        "description": "Get sleep data for a specific date",
        "inputSchema": {
          "date": "string (YYYY-MM-DD)"
        },
        "outputFields": ["duration", "efficiency", "deepMinutes", "lightMinutes", "remMinutes"]
      },
      "heart_rate": {
        "tool": "get_heart_rate_intraday",
        "description": "Get intraday heart rate data",
        "inputSchema": {
          "date": "string (YYYY-MM-DD)",
          "detailLevel": "string (1sec, 1min, 5min, 15min)"
        },
        "outputFields": ["restingHeartRate", "heartRateZones", "intradayData"]
      },
      "nutrition": {
        "tool": "get_food_log",
        "description": "Get food and water log for a date",
        "inputSchema": {
          "date": "string (YYYY-MM-DD)"
        },
        "outputFields": ["calories", "water", "foods"]
      },
      "weight": {
        "tool": "get_weight_log",
        "description": "Get weight and body composition data",
        "inputSchema": {
          "date": "string (YYYY-MM-DD)"
        },
        "outputFields": ["weight", "bmi", "fat"]
      }
    },
    "google-fit": {
      "activity": {
        "tool": "get_daily_activity",
        "description": "Get aggregated daily activity data",
        "inputSchema": {
          "startDate": "string (YYYY-MM-DD)",
          "endDate": "string (YYYY-MM-DD)"
        },
        "outputFields": ["steps", "calories", "distance", "moveMinutes"]
      },
      "heart_rate": {
        "tool": "get_heart_rate",
        "description": "Get heart rate data points",
        "inputSchema": {
          "startDate": "string (YYYY-MM-DD)",
          "endDate": "string (YYYY-MM-DD)"
        },
        "outputFields": ["bpm", "timestamp"]
      },
      "sleep": {
        "tool": "get_sleep_sessions",
        "description": "Get sleep session data",
        "inputSchema": {
          "startDate": "string (YYYY-MM-DD)",
          "endDate": "string (YYYY-MM-DD)"
        },
        "outputFields": ["sleepType", "duration", "stages"]
      },
      "weight": {
        "tool": "get_weight",
        "description": "Get weight measurements",
        "inputSchema": {
          "startDate": "string (YYYY-MM-DD)",
          "endDate": "string (YYYY-MM-DD)"
        },
        "outputFields": ["weight", "timestamp"]
      }
    },
    "apple-health": {
      "query": {
        "tool": "query_health_data",
        "description": "SQL query interface for Apple Health CSV data",
        "inputSchema": {
          "query": "string (SQL query)",
          "csvPath": "string (path to export.csv)"
        },
        "outputFields": ["dynamic based on query"]
      }
    },
    "opennutrition-mcp": {
      "search": {
        "tool": "search-food-by-name",
        "description": "Search foods by name, brand, or partial matches from 300K+ food database",
        "inputSchema": {
          "query": "string (min 1 char)",
          "page": "number (default: 1, min: 1)",
          "pageSize": "number (default: 5)"
        },
        "outputFields": ["id", "name", "brand", "calories", "protein", "carbs", "fat", "nutrients"]
      },
      "browse": {
        "tool": "get-foods",
        "description": "Browse paginated list of all foods in database",
        "inputSchema": {
          "page": "number (default: 1, min: 1)",
          "pageSize": "number (default: 5)"
        },
        "outputFields": ["id", "name", "brand", "nutrients"]
      },
      "details": {
        "tool": "get-food-by-id",
        "description": "Get detailed nutritional information by food ID (format: fd_xxxxx)",
        "inputSchema": {
          "id": "string (must start with 'fd_')"
        },
        "outputFields": ["id", "name", "brand", "nutrients", "ingredients", "allergens", "servingSize"]
      },
      "barcode": {
        "tool": "get-food-by-ean13",
        "description": "Look up food by EAN-13 barcode (13 digits)",
        "inputSchema": {
          "ean_13": "string (exactly 13 characters)"
        },
        "outputFields": ["id", "name", "brand", "barcode", "nutrients", "allergens"]
      }
    },
    "openweathermap": {
      "current": {
        "tool": "get_current_weather",
        "description": "Get current weather conditions",
        "inputSchema": {
          "lat": "number",
          "lon": "number",
          "units": "string (metric, imperial, standard)"
        },
        "outputFields": ["temp", "feelsLike", "humidity", "condition", "icon"]
      },
      "forecast": {
        "tool": "get_forecast",
        "description": "Get 5-day forecast (3-hour intervals)",
        "inputSchema": {
          "lat": "number",
          "lon": "number",
          "units": "string (metric, imperial, standard)"
        },
        "outputFields": ["forecastList", "temp", "condition", "timestamp"]
      },
      "air_quality": {
        "tool": "get_air_quality",
        "description": "Get air quality index and pollutants",
        "inputSchema": {
          "lat": "number",
          "lon": "number"
        },
        "outputFields": ["aqi", "co", "no2", "o3", "pm2_5", "pm10"]
      }
    }
  }
}
